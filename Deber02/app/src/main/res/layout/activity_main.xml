<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="117dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toStartOf="@+id/image_opciones"
        app:layout_constraintHorizontal_bias="0.639"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo" />

    <ImageView
        android:id="@+id/image_opciones"
        android:layout_width="32dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_opciones" />

    <EditText
        android:id="@+id/editText_buscar"
        android:layout_width="356dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:alpha="2"
        android:background="@drawable/estilo_redondeado"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="inherit"
        android:textColor="@color/barraBusqueda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_logo" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/boton_buscar"
        android:layout_width="87dp"
        android:layout_height="58dp"
        android:layout_marginTop="60dp"
        android:clickable="true"
        android:scaleX="0.75"
        android:scaleY="0.75"
        app:backgroundTint="@color/lupa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/white"
        app:srcCompat="@drawable/ic_search_black_24dp" />

    <ImageView
        android:id="@+id/imgPlay"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="204dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_logo"
        app:srcCompat="@drawable/ic_ps" />

    <ImageView
        android:id="@+id/imgNintendo"
        android:layout_width="51dp"
        android:layout_height="57dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.802"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_logo"
        app:srcCompat="@drawable/ic_nintendo" />

    <ImageView
        android:id="@+id/imgPc"
        android:layout_width="58dp"
        android:layout_height="59dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="112dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_logo"
        app:srcCompat="@drawable/ic_pc" />

    <ImageView
        android:id="@+id/imgXbox"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_logo"
        app:srcCompat="@drawable/ic_xbox" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerJuego"
        android:layout_width="406dp"
        android:layout_height="383dp"
        android:layout_marginBottom="16dp"
        android:background="@color/fondoJuego"
        android:paddingHorizontal="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_precioOferta"
        app:layout_constraintVertical_bias="0.659" />

    <ImageView
        android:id="@+id/imageView_precioOferta"
        android:layout_width="408dp"
        android:layout_height="106dp"

        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPc"

        app:srcCompat="@drawable/ic_juegoferta" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="87dp"
        android:layout_height="33dp"
        android:fontFamily="@font/fuente"
        android:gravity="center"
        android:text="$15.55"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_precioOferta"
        app:layout_constraintEnd_toEndOf="@+id/imageView_precioOferta"
        app:layout_constraintHorizontal_bias="0.959"
        app:layout_constraintStart_toStartOf="@+id/imageView_precioOferta"
        app:layout_constraintTop_toTopOf="@+id/imageView_precioOferta"
        app:layout_constraintVertical_bias="0.821" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="30dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/fondoJuego"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/recyclerJuego"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_precioOferta">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="160dp"
            android:layout_height="23dp"
            android:fontFamily="@font/fuente"
            android:gravity="bottom"
            android:text="Juegos del momento"
            android:textAlignment="center"
            android:textColor="@color/precio" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>