<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="1dp"
    android:layout_marginVertical="3dp"
    app:circularflow_radiusInDP="100">


    <ImageView
        android:id="@+id/img_portada"
        android:layout_width="125dp"
        android:layout_height="171dp"


        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_daysgone" />

    <ImageView
        android:id="@+id/img_plataforma"
        android:layout_width="31dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_portada"
        app:layout_constraintEnd_toEndOf="@+id/img_portada"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="@+id/img_portada"
        app:layout_constraintTop_toTopOf="@+id/img_portada"
        app:layout_constraintVertical_bias="0.049"
        app:srcCompat="@drawable/ic_play" />

    <TextView
        android:id="@+id/textView_descuento"
        android:layout_width="41dp"
        android:layout_height="23dp"
        android:background="@drawable/estilo_descuento"
        android:fontFamily="@font/fuente"
        android:gravity="center"
        android:text="-45%"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_portada"
        app:layout_constraintEnd_toEndOf="@+id/img_portada"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_portada"
        app:layout_constraintTop_toTopOf="@+id/img_portada"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView_precio"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:fontFamily="@font/fuente"
        android:gravity="center"
        android:text="$285.11"
        android:textColor="@color/precio"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_portada"
        app:layout_constraintEnd_toEndOf="@+id/img_portada"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/img_portada"
        app:layout_constraintTop_toTopOf="@+id/img_portada"
        app:layout_constraintVertical_bias="0.98" />


</androidx.constraintlayout.widget.ConstraintLayout>