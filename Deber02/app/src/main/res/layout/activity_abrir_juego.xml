<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:textAlignment="inherit"
    tools:context=".AbrirJuego">

    <ImageView
        android:id="@+id/image_logoJ"
        android:layout_width="117dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toStartOf="@+id/image_opcionesJ"
        app:layout_constraintHorizontal_bias="0.639"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/ic_logo" />

    <ImageView
        android:id="@+id/image_opcionesJ"
        android:layout_width="32dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_opciones" />

    <EditText
        android:id="@+id/editText_buscarJ"
        android:layout_width="356dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:alpha="2"
        android:background="@drawable/estilo_redondeado"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="inherit"
        android:textColor="@color/barraBusqueda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_logoJ" />

    <ImageView
        android:id="@+id/imgPlayJ"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="204dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_logoJ"
        app:srcCompat="@drawable/ic_ps" />

    <ImageView
        android:id="@+id/imgNintendoJ"
        android:layout_width="51dp"
        android:layout_height="57dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.802"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_logoJ"
        app:srcCompat="@drawable/ic_nintendo" />

    <ImageView
        android:id="@+id/imgPcJ"
        android:layout_width="58dp"
        android:layout_height="59dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_logoJ"
        app:srcCompat="@drawable/ic_pc" />

    <ImageView
        android:id="@+id/imgXboxJ"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_logoJ"
        app:srcCompat="@drawable/ic_xbox" />

    <ImageView
        android:id="@+id/img_portadaInicio"
        android:layout_width="411dp"
        android:layout_height="199dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPlayJ"
        app:srcCompat="@drawable/ic_daysgoneabierto" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/boton_buscarJ"
        android:layout_width="87dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        android:clickable="true"
        android:scaleX="0.75"
        android:scaleY="0.75"
        app:backgroundTint="@color/lupa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/white"
        app:srcCompat="@drawable/ic_search_black_24dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_weight="1"
        android:text="Precio de venta al público:"
        android:textColor="#5A5252"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <TextView
        android:id="@+id/text_precio"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="68dp"
        android:layout_weight="1"
        android:text="$4.23ee"
        android:textColor="#5A5252"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <TextView
        android:id="@+id/text_descuento"
        android:layout_width="68dp"
        android:layout_height="16dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="220dp"
        android:layout_weight="1"
        android:fontFamily="@font/fuente"
        android:gravity="center"
        android:text="Steam"
        android:textAlignment="center"
        android:textColor="#ff5400"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/text_precioConDescuento"
        android:layout_width="99dp"
        android:layout_height="24dp"
        android:layout_marginEnd="128dp"
        android:layout_weight="1"
        android:fontFamily="@font/fuente"
        android:gravity="center"
        android:text="Steam"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_descuento"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="407dp"
        android:layout_height="65dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:background="@color/fondoJuego"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_portadaInicio">

        <TextView
            android:id="@+id/text_nombreJuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fuente"
            android:gravity="bottom"
            android:text="Days Gone"
            android:textAlignment="center"
            android:textColor="@color/precio"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="9dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@drawable/estilo_infor"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_plataformaJ"
                android:layout_width="351dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_play" />

            <TextView
                android:id="@+id/text_plataforma"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_weight="1"
                android:background="@drawable/estilo_separador"
                android:fontFamily="@font/fuente"
                android:gravity="center"
                android:text="Steam"
                android:textAlignment="center"
                android:textColor="@color/precio"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_desarrollador"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_weight="1"
                android:fontFamily="@font/fuente"

                android:gravity="center"
                android:text="16 jun 2020"
                android:textAlignment="center"
                android:textColor="@color/precio"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerJuegoJ"
        android:layout_width="411dp"
        android:layout_height="163dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="4dp"
        android:background="@color/fondoJuego"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.0">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/button"
        android:layout_width="288dp"
        android:layout_height="50dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/estilo_descuento"
        android:fontFamily="@font/fuente"
        android:text="Comprar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/text_descuento" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:srcCompat="@drawable/ic_like" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="413dp"
        android:layout_height="24dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:background="@color/fondoJuego"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/fuente"
            android:gravity="bottom"
            android:text="También podría gustarte……"
            android:textAlignment="center"
            android:textColor="@color/precio"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

